<%= form_for(@subscription) do |f| %>
  <% if @subscription.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@subscription.errors.count, "error") %> prohibited this subscription from being saved:</h2>

      <ul>
      <% @subscription.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>

	<%
		random_number_1 = rand(4)+1
		random_number_2 = rand(4)+1
	%>
	<div class="field">
		<%= label "antispam", "answer", "Spam bots can't do math. What is #{random_number_1} + #{random_number_2}?" %><br />
		<%= text_field "antispam", "answer" %><br />
		<%= hidden_field "antispam", "solution", value: random_number_1+random_number_2 %>
	</div>

  <div class="actions">
    <%= f.submit "Subscribe" %>
  </div>
<% end %>
