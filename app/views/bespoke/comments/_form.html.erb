<%
	parent ||= nil
	formArray = [post]

	if parent
		formArray << parent.children.build
	else
		formArray << post.comments.build
	end
%>

<%= form_for formArray, remote: true do |f| %>
	<%= f.label :author %><br />
	<%= f.text_field :author %><br />
	<%= f.label :title %><br />
	<%= f.text_field :title %><br />
	<%= f.label :body %><br />
	<%= f.text_area :body %><br />
	<%= f.submit %>
<% end %>
